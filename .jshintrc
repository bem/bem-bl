{
    "browser": true,
    "jquery": true,
    "node": true,

    "globals": {
        "JSON": false,
        "BEM": false,
        "BEMHTML": false,
        "bh": false,
        "Lego": false,
        "describe": false,
        "xdescribe": false,
        "before": false,
        "after": false,
        "beforeEach": false,
        "afterEach": false,
        "it": false,
        "xit": false,
        "jasmine": false,
        "expect": false,
        "spyOn": false
    },

    "curly": true,
    "camelcase": true,
    "eqeqeq": true,
    "es3": true,
    "immed": true,
    "latedef": "nofunc",
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonew": true,
    "quotmark": "single",
    "undef": true,
    "unused": "vars",
    "strict": false,
    "trailing": true,
    "maxparams": 4,
    "maxdepth": 4,
    "maxlen": 120,

    "expr": true,
    "lastsemic": true,
    "laxbreak": true,
    "sub": true,

    "nomen": false,
    "onevar": false
}
