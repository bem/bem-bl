block b-block-example {

    attrs: {
        id: this.ctx.id
    }

    elem iframe {
        tag: 'iframe',
        attrs: {
            src: this.ctx.url
        }
    }

    elem source-link, default: {
        local(
            this._mode = '',
            this.ctx = {
            block: 'b-link',
            url: this.ctx.url,
            mix: [{block: 'b-block-example', elem: 'source'}],
            content: this.ctx.content
            }
        ) this.apply()
    }
}
