block b-menu, mod layout horiz {

    content: [
        this.ctx.title,
        {
            elem: 'layout',
            content: this.ctx.content
    }]

    elem layout, tag: 'ul'

    elem item, default, !this.ctx._wrap: {

        var content = [{
            elem: 'layout-unit',
            content: this.ctx
        }];

        local(
            this._mode = '',
            this.ctx._wrap = true,
            this.position = this.position - 1,
            this.ctx = content
        ) this.apply();
    }

    elem layout-unit {
        tag: 'li',
        mix: {
            var mix = [];

            this.isFirst() && mix.push({ elemMods: { position: 'first' } });
            this.isLast() && mix.push({ elemMods: { position: 'last' } });

            return mix;
        }
    }

}
