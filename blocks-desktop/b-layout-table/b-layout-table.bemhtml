block('b-layout-table')(

    tag()('table'),

    elem('row').tag('tr'),

    match(this.elem === 'cell' || this.elem === 'gap')(
        tag()('td'),
        attrs()(function () {
            var ctx = this.ctx,
                a = {},
                props = ['colspan', 'rowspan'], p;

            while(p = props.shift()) ctx[p] && (a[p] = ctx[p]);

            return a;
        })
    )

)

